<div class="container">

<section>
  <h2>Create New Post</h2>

  <form class="new-blog-form">
    <div>
      <label class="form-label mt-4" for="title">Title</label>
      <input class="form-control" type="text" id="title" style="max-width: 35rem;" name="title" />
    </div>
    <div>
      <label for="contents">Content</label>
      <div class="form-group">
      <textarea class="form-control" name="contents" style="max-width: 35rem;"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</section>
</div>

<script src="/js/new-blog.js"></script>

