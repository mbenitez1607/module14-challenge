<section class="card">
  <header>
      <h3>{{title }}</h3>
      <h4>Posted by {{user.username}} on {{format_date creation_date}}</h4>
  </header>
  <body>{{contents}}</body>
</section>

{{#if loggedIn}}
<div class="row justify-space-between-md">
  <div class="login-card">
    <form class="form login-form">
      <div class="form-group">
        <label>Comment</label>
        <input class="form-input" type="text" id="comment" />
      </div>
        <button class="btn btn-primary w-100" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
{{/if}}

